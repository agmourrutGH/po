---
const { title, description } = Astro.props as {
  title: string;
  description: string;
};
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- iOS-ish vibe -->
    <meta name="theme-color" content="#ffffff" />
  </head>

  <body class="min-h-screen bg-white text-zinc-950 antialiased">
    <!-- fondo sutil tipo Apple -->
    <div class="pointer-events-none fixed inset-0 -z-10">
      <div class="absolute inset-0 bg-white"></div>
      <div class="absolute inset-0 bg-[radial-gradient(60%_50%_at_50%_0%,rgba(0,0,0,0.06),transparent_60%)]"></div>
      <div class="absolute inset-0 bg-[linear-gradient(to_bottom,rgba(0,0,0,0.02),transparent_40%)]"></div>
    </div>

    <div class="mx-auto max-w-6xl px-5">
      <slot />
    </div>
  </body>
</html>
