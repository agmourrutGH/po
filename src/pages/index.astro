---
import ProjectCard from "../components/ProjectCard.astro";
import { projects } from "../data/projects";

const name = "Agustin Mourrut";
const role = "Desarrollador Web";
const tagline = "Construyo sitios y apps web rápidas, claras y mantenibles.";

const links = {
  github: "https://github.com/agmourrutGH",
  linkedin: "https://www.linkedin.com/in/TU_USUARIO",
  email: "mailto:tuemail@gmail.com",
};
---

<main class="mx-auto max-w-5xl px-5 py-12">
  <header class="flex flex-wrap items-center justify-between gap-4">
    <div>
      <h1 class="text-4xl font-bold">{name}</h1>
      <p class="mt-2 text-black/70">{role} · {tagline}</p>
    </div>

    <nav class="flex flex-wrap gap-4">
      <a class="underline" href={links.github} target="_blank">GitHub</a>
      <a class="underline" href={links.linkedin} target="_blank">LinkedIn</a>
      <a class="underline" href={links.email}>Email</a>
    </nav>
  </header>

  <section class="mt-12">
    <h2 class="mb-4 text-2xl font-semibold">Proyectos</h2>
    <div class="grid gap-4 sm:grid-cols-2">
      {projects.map((p) => (
        <ProjectCard {...p} />
      ))}
    </div>
  </section>

  <footer class="mt-14 text-sm text-black/60">
    © {new Date().getFullYear()} {name}
  </footer>
</main>
