---
type Props = {
  title: string;
  desc: string;
  bullets: string[];
  stack: string[];
  repo: string;
  live?: string;
};

const { title, desc, bullets, stack, repo, live } = Astro.props as Props;
---

<article
  class="group rounded-2xl border border-zinc-200 bg-white p-6 shadow-sm transition
         hover:-translate-y-0.5 hover:shadow-md"
>
  <header>
    <h3 class="text-base font-semibold tracking-tight">{title}</h3>
    <p class="mt-2 text-sm leading-relaxed text-zinc-600">{desc}</p>
  </header>

  <ul class="mt-4 space-y-2 text-sm text-zinc-700">
    {bullets.map((b) => (
      <li class="flex gap-2">
        <span class="mt-2 h-1.5 w-1.5 shrink-0 rounded-full bg-zinc-400"></span>
        <span>{b}</span>
      </li>
    ))}
  </ul>

  <div class="mt-4 flex flex-wrap gap-2">
    {stack.map((s) => (
      <span class="rounded-full bg-zinc-100 px-3 py-1 text-[12px] text-zinc-700">
        {s}
      </span>
    ))}
  </div>

  <div class="mt-5 flex flex-wrap gap-3">
    {live && (
      <a
        class="inline-flex items-center gap-2 rounded-xl bg-zinc-900 px-4 py-2 text-sm font-semibold text-white
               shadow-sm transition hover:bg-zinc-800 focus:outline-none focus:ring-2 focus:ring-zinc-300"
        href={live}
        target="_blank"
        rel="noreferrer"
      >
        Demo <span aria-hidden>↗</span>
      </a>
    )}

    <a
      class="inline-flex items-center gap-2 rounded-xl border border-zinc-200 bg-white px-4 py-2 text-sm font-semibold text-zinc-900
             transition hover:bg-zinc-50 focus:outline-none focus:ring-2 focus:ring-zinc-200"
      href={repo}
      target="_blank"
      rel="noreferrer"
    >
      Repo <span aria-hidden>↗</span>
    </a>
  </div>
</article>
