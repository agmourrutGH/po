---
const name = "Agustín Mourrut";
const role = "Desarrollador Web";
const tagline = "Construyo sitios y apps web rápidas, claras y mantenibles.";
const links = {
  github: "https://github.com/agmourrutGH",
  linkedin: "https://www.linkedin.com/in/TU_USUARIO",
  email: "mailto:tuemail@gmail.com",
};
const projects = [
  {
    title: "Proyecto 1",
    desc: "Qué problema resuelve y qué hiciste vos (1-2 líneas).",
    stack: ["Astro", "Tailwind", "Vercel"],
    live: "https://TU-DEPLOY.vercel.app",
    repo: "https://github.com/agmourrutGH/TU-REPO",
  },
  {
    title: "Proyecto 2",
    desc: "Descripción corta con impacto (no genérica).",
    stack: ["React", "Node"],
    live: "#",
    repo: "#",
  },
];
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{name} — Portfolio</title>
    <meta name="description" content={`${name} — ${tagline}`} />
  </head>

  <body style="font-family: system-ui; margin: 0; padding: 0;">
    <main style="max-width: 980px; margin: 0 auto; padding: 48px 20px;">
      <header style="display:flex; justify-content:space-between; gap:16px; flex-wrap:wrap; align-items:center;">
        <div>
          <h1 style="margin:0; font-size: 40px;">{name}</h1>
          <p style="margin:8px 0 0; opacity:.8;">{role} · {tagline}</p>
        </div>
        <nav style="display:flex; gap:12px; flex-wrap:wrap;">
          <a href={links.github} target="_blank">GitHub</a>
          <a href={links.linkedin} target="_blank">LinkedIn</a>
          <a href={links.email}>Email</a>
        </nav>
      </header>

      <section style="margin-top: 48px;">
        <h2 style="margin: 0 0 12px;">Proyectos</h2>
        <div style="display:grid; grid-template-columns: repeat(auto-fit, minmax(260px, 1fr)); gap: 16px;">
          {projects.map(p => (
            <article style="border:1px solid rgba(0,0,0,.12); border-radius:14px; padding:16px;">
              <h3 style="margin:0 0 8px;">{p.title}</h3>
              <p style="margin:0 0 12px; opacity:.85;">{p.desc}</p>
              <p style="margin:0 0 12px; font-size: 14px; opacity:.75;">
                <strong>Stack:</strong> {p.stack.join(" · ")}
              </p>
              <div style="display:flex; gap:12px; flex-wrap:wrap;">
                <a href={p.live} target="_blank">Demo</a>
                <a href={p.repo} target="_blank">Repo</a>
              </div>
            </article>
          ))}
        </div>
      </section>

      <footer style="margin-top: 56px; opacity:.7; font-size: 14px;">
        <p style="margin:0;">© {new Date().getFullYear()} {name}</p>
      </footer>
    </main>
  </body>
</html>
